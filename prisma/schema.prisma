generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                                    String   @id @default(cuid())
  name                                  String
  email                                 String   @unique
  password                              String
  isVerified                            Boolean  @default(false)
  emailVerificationToken                String?
  emailVerificationTokenExpiresAt       DateTime?
  
}
